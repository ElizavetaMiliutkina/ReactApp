{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ESNext",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "types": ["jest", "@testing-library/jest-dom", "node"],
    "noEmit": true,
    "strict": true
  },
  "include": [
    "src/@types/**/*.d.ts",
    "./config/jest/setupTests.ts"
  ]
}
